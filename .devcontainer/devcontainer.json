{
  "name": "Java Multi-Version Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:1-21",
  "postCreateCommand": "source ~/.bashrc && \\
    curl -s \"https://get.sdkman.io \" | bash && \\
    source \"$HOME/.sdkman/bin/sdkman-init.sh\" && \\
    sdk install java 11.0.27.fx-zulu && \\
    sdk install java 17.0.12-open && \\
    sdk install java 21.0.6-tem && \\
    sdk use java 21.0.6-tem",
  "customizations": {
    "vscode": {
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/home/gitpod/.sdkman/candidates/java/21.0.6-tem",
            "default": true
          }
        ],
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-pack",
        "golang.go",
        "ms-vscode.gradle-language-service"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "tem",
      "installGradle": true,
      "gradleVersion": "7.5.1",
      "installMaven": true,
      "mavenVersion": "3.6.3",
      "installAnt": true,
      "antVersion": "1.10.12",
      "installGroovy": true,
      "groovyVersion": "2.5.22"
    }
  },

  "mounts": [],
  "remoteUser": "vscode"
}
